---
import { getPublishedPosts } from '../lib/articles';

import ArticleLatestCard from './ArticleLatestCard.astro';

const sortedAndLimitPosts = (await getPublishedPosts())
    .sort(
        (a, b) =>
            b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf()
    )
    .slice(0, 10);
---

<div class="bg-white py-8 dark:bg-gray-700 sm:py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto">
            <h2
                class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl"
            >
                Latest
            </h2>
            <div
                class="mt-10 space-y-16 border-t border-gray-200 pt-10 sm:mt-6 sm:pt-12"
            >
                {
                    sortedAndLimitPosts.map((article) => (
                        <ArticleLatestCard article={article} />
                    ))
                }
            </div>
        </div>
    </div>
</div>
