---
import { getCollection } from "astro:content";

import ArticleLatestCard from "./ArticleLatestCard.astro";

const publishedArticleEntries = await getCollection("articles", ({ data }) => {
    return data.draft !== true;
});

const sortedAndLimitPosts = publishedArticleEntries
    .sort(
        (a, b) =>
            b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf(),
    )
    .slice(0, 10);
---

<div class="bg-white dark:bg-gray-700 py-8 sm:py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
                Latest
            </h2>
            <div class="mt-10 space-y-16 border-t border-gray-200 pt-10 sm:mt-6 sm:pt-12">
                {
                    sortedAndLimitPosts.map((article) => (
                        <ArticleLatestCard article={article} />
                    ))
                }
            </div>
        </div>
    </div>
</div>
