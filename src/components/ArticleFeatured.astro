---
import { getCollection } from "astro:content";

import ArticleFeaturedCard from "./ArticleFeaturedCard.astro";

const publishedArticleEntries = await getCollection("articles", ({ data }) => {
    return data.draft !== true;
});

const featuredAndLimitedPosts = publishedArticleEntries
    .filter((article) => article.data.featured)
    .sort(
        (a, b) =>
            b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf(),
    )
    .slice(0, 3);
---

<div class="bg-white dark:bg-gray-800 py-8 sm:py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
            <h2 class="text-2xl font-bold font-roboto tracking-tight text-gray-900 sm:text-3xl dark:text-white">
                Featured
            </h2>
        </div>
        <div
            class="mx-auto mt-5 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-10 lg:mx-0 lg:max-w-none lg:grid-cols-3"
        >
            {
                featuredAndLimitedPosts.map((article) => (
                    <ArticleFeaturedCard article={article} />
                ))
            }
        </div>
    </div>
</div>
