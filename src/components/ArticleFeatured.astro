---
import { getPublishedArticles } from '../lib/articles';

import ArticleFeaturedCard from './ArticleFeaturedCard.astro';

const featuredArticles = await getPublishedArticles({
    customFilter: article => article.data.featured,
    limit: 3,
});
---

<div class="bg-white py-8 dark:bg-gray-900 sm:py-16">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl text-center">
            <h2
                class="font-roboto text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl"
            >
                Featured
            </h2>
        </div>
        <div
            class="mx-auto mt-5 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-10 lg:mx-0 lg:max-w-none lg:grid-cols-3"
        >
            {
                featuredArticles.map((article) => (
                    <ArticleFeaturedCard article={article} />
                ))
            }
        </div>
    </div>
</div>
