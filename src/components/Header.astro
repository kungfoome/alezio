---
import { Image } from "astro:assets"
import DarkModeButton from "./DarkModeButton.astro"

import logo from "../assets/alezio_logo.svg"
---

<header class="bg-gray-900 sticky top-0 z-10">
    <nav
        class="mx-auto flex items-center justify-between p-10 lg:px-12"
        aria-label="Global"
    >
        <div class="flex lg:flex-1">
            <a href="/" class="flex">
                <span class="sr-only">Alez.io Blog</span>
                <Image
                    src={logo}
                    alt="Alez.io Blog Homepage"
                    width="70"
                    height="70"
                />
                <span class="flex items-center font-roboto pl-3 text-white text-2md lg:text-xl font-bold">:Alez.io</span>
            </a>
            
        </div>
        <div class="flex flex-1 justify-end">
            <DarkModeButton />
        </div>
    </nav>
</header>
